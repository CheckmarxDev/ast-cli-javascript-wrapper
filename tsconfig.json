{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "dist/",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "target": "ES2015",
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "pretty": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*",
      "./src/main/wrapper/resources/**/*"
    ]
}