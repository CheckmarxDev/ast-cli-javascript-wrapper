{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "dist/",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "target": "es5",
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "pretty": true
    },
    "include": ["./src/**/*","./src/main/resources/**/*"]
}